                    <div class="col-md-8">
                        @Html.EditorFor(model => model.pengecamansemula.LabelMayat, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.pengecamansemula.LabelMayat, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PengecamanMukaSimati, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
