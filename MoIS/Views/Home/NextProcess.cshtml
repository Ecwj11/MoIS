                <div class="form-group">
                    @Html.LabelFor(model => model.Pakaian, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.pengecamansemula.Pakaian, new { htmlAttributes = new { @class = "form-control", required = "required" } })
                        @Html.ValidationMessageFor(model => model.pengecamansemula.Pakaian, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Lain_lainCara, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.pengecamansemula.Lain_lainCara, new { htmlAttributes = new { @class = "form-control", required = "required" } })
