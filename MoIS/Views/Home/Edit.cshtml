            <div class="col-md-8">
                <div class="row" style="margin-left: 0px;">
                    <label>
                        @if (@Model.deceased.TypeOfCase == 1)
                        {
                            @Html.RadioButton("TypeOfCase", "1", htmlAttributes: new { @checked = true })
                        }
