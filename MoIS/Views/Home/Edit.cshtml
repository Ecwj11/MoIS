                @Html.ValidationMessageFor(model => model.deceased.NoIC, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Gender, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                <div class="row" style="margin-left: 0px;">
                    <label>
                        @if (@Model.deceased.Gender == "Male")
                        {
                            @Html.RadioButton("Gender", "Male", htmlAttributes: new { @checked = true })
                        }
                        else
                        {
                            @Html.RadioButton("Gender", "Male")
                        }
                        Lelaki
                    </label>
                    <label>
                        @if (@Model.deceased.Gender == "Female")
                        {
                            @Html.RadioButton("Gender", "Female", htmlAttributes: new { @checked = true })
                        }
                        else
                        {
                            @Html.RadioButton("Gender", "Female")
                        }
                        Perempuan
                    </label>
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.deceased.Age, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.TextBoxFor(model => model.deceased.Age, new { @class = "form-control", required = "required", maxlength = "3" })
